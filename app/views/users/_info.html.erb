<h2>User Info</h2>
<table class='table'>
  <tr><%= image_tag user.get_profile_image, size: "100x100" %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
	 </tr>
	 <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
  	<% if user == current_user %>
  	<p><%= link_to "プロフィール編集", edit_user_path(user) %></p>
  	<% end %>
  </tr>
</table>
